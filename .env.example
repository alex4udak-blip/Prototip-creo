# =====================================================
# BannerGen Environment Variables
# Скопируй в .env и заполни значения
# =====================================================

# === API KEYS ===

# Claude API (для улучшения промптов)
# Получить: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-...

# Runware API (основная генерация изображений)
# Получить: https://my.runware.ai → API Keys
RUNWARE_API_KEY=...

# Google AI (Nano Banana для текста на баннерах)
# Получить: https://aistudio.google.com/apikey
GOOGLE_API_KEY=...

# === DATABASE ===

# PostgreSQL connection string
# Локально: postgresql://bannergen:bannergen@localhost:5432/bannergen
# Railway: автоматически через ${{Postgres.DATABASE_URL}}
DATABASE_URL=postgresql://...

# === AUTH ===

# JWT секрет (сгенерируй: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your-super-secret-key-min-32-characters

# === APP ===

# Порт сервера
PORT=3000

# Environment
NODE_ENV=development

# Frontend URL (для CORS)
FRONTEND_URL=http://localhost:5173

# === STORAGE ===

# Путь для сохранения картинок
# Локально: ./uploads
# Railway: /app/uploads (Railway Volume)
STORAGE_PATH=./uploads

# === LIMITS ===

# Максимум генераций в день на пользователя
MAX_GENERATIONS_PER_DAY=100

# Максимальный размер загружаемого файла (MB)
MAX_FILE_SIZE_MB=10
